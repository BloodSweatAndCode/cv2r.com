  <script>
    var state = {};
    $(document).ready(function () {
  var navListItems = $('div.setup-panel div a'),
          allWells = $('.setup-content'),
          allNextBtn = $('.nextBtn'),
  		  allPrevBtn = $('.prevBtn');

  allWells.hide();

  navListItems.click(function (e) {
      e.preventDefault();
      var $target = $($(this).attr('href')),
              $item = $(this);

      if (!$item.hasClass('disabled')) {
          navListItems.removeClass('btn-primary').addClass('btn-default');
          $item.addClass('btn-primary');
          allWells.hide();
          $target.show();
          $target.find('input:eq(0)').focus();
      }
  });
  
  allPrevBtn.click(function(){
      var curStep = $(this).closest(".setup-content"),
          curStepBtn = curStep.attr("id"),
          prevStepWizard = $('div.setup-panel div a[href="#' + curStepBtn + '"]').parent().prev().children("a");

          prevStepWizard.removeAttr('disabled').trigger('click');
  });

  allNextBtn.click(function(){
      var curStep = $(this).closest(".setup-content"),
          curStepBtn = curStep.attr("id"),
          nextStepWizard = $('div.setup-panel div a[href="#' + curStepBtn + '"]').parent().next().children("a"),
          curInputs = curStep.find("input[type='text'],input[type='url']"),
          isValid = true;

      $(".form-group").removeClass("has-error");
      for(var i=0; i<curInputs.length; i++){
          if (!curInputs[i].validity.valid){
              isValid = false;
              $(curInputs[i]).closest(".form-group").addClass("has-error");
          }
      }

      if (isValid)
          nextStepWizard.removeAttr('disabled').trigger('click');
  });

  $('div.setup-panel div a.btn-primary').trigger('click');
});

    $(document).ready(function() {
      $('#rom')[0].addEventListener('change', function() {
        state = {};
        console.log(this.files[0]);
        var file = this.files[0];
        $('#romFile')[0].value = file.name;

        var reader = new FileReader();
        reader.onload = function() {
          state.rom = new Uint8Array(this.result);
        }
        reader.readAsArrayBuffer(file);
      }, false);

      $('#seed')[0].addEventListener('click', function() {
        var xhr = new XMLHttpRequest();
        xhr.open('GET', '/seed', true);
        xhr.onload = function () {
          console.log(this);
          $('#seedString')[0].value = this.response;
        };
        xhr.send(null);
      }, false);

      $('#patch')[0].addEventListener('click', function() {
        var xhr = new XMLHttpRequest();
        xhr.open('POST', '/patch', true);
        xhr.onreadystatechange = function() {
          if (this.readyState === XMLHttpRequest.DONE && this.status === 200) {
            const { patch, spoiler } = JSON.parse(this.response);
            console.log(spoiler);
            const { rom } = state;
            patch.forEach(entry => {
              Object.keys(entry).forEach(offset => {
                rom.set(entry[offset], parseInt(offset));
              });
            });
            const blob = new Blob([rom]);
            const fileName = 'cv2r.nes';
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', fileName);
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
          }
        };
        xhr.send(null);
      }, false);
    });
  </script>
