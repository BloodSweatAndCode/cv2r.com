<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

<div class="jumbotron text-center">
  <div class="container">
    <img src="/img/crew.png">
    <hr>
    <div class="row">
      <% crew.forEach(function(c) { %>
      <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow " style="border: solid 3px black">
          <img src="<%= c.image %>" class="card-img-top" alt="...">
          <div class="card-body text-center">
            <h5 class="card-title mb-0"><%= c.name %></h5>
            <div class="card-text text-black-50"><%= c.role %></div>
            <div class="card-text text-black-50 social">
              <% c.social && c.social.forEach(function(s) { %>
              <a href="<%= s.link %>"><img src="/img/social/<%= s.name %>.png"></a>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
  </div>
</div>

</body>
</html>
