<html>
<head>
  <% include ../partials/header.ejs %>
  <script>
    var HEIGHT = 32;
    var WIDTH = 16;
    var MULT = 8;
    var mousedown = false;
    var canvas, picker, ctx, i, html;

    var nesPalette = [
      { hex: '7C7C7C', rgb: [ 124, 124, 124 ] },
